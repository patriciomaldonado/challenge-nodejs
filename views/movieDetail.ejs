    <figure>
        <!-- <img src="/img/logo-DH.png" alt="Logo Digital House"> -->
    </figure>

    <br/><div class="category-name">Detalle de pelicula</div>

    <div class="contenete" style="padding: 40px;">
  
        <div class="basic-card basic-card-aqua cuadraditos">
          <div class="card-content">
              <span class="card-title"></span>
              <p class="card-text">

                <h1><%= movie.title %> </h1><br>
                  
                  <p>RATING: <%= movie.rating %> </p><br>
                  <p>AWARDS: <%= movie.awards %> </p><br>
                  <p>GENRE: <% if(genres != null){ %>
                    <%= genres.name %>
                  <% } %> </p><br>
                  <p>ACTOR: <%= actors.first_name + " " + actors.last_name%> </p><br>
                  <p>LENGTH: <%= movie.length + ' min'%> </p><br>
                  <p>RELEASE DATE: <%= movie.release_date %> </p><br>
                </p>
          </div>

          <div class="card-link">
              <a href="/movies/create" title="Read Full"><span>Agregar</span></a><br><br>
              <a href="/movies/edit/<%= movie.id %>" title="Read Full"><span>Editar</span></a><br><br>
              <form action="/movies/delete/<%= movie.id %>" method="POST">
                <button class="delete" data-confirm="Are you sure to delete this item?" id="elBoton"  type="submit">Borrar</button>
              </form>
          </div>
      </div>
          
      <script>
        var deleteLinks = document.querySelectorAll('.delete');

for (var i = 0; i < deleteLinks.length; i++) {
  deleteLinks[i].addEventListener('click', function(event) {
    event.preventDefault();

    var choice = confirm(this.getAttribute('data-confirm'));

    if (choice) {
      window.location.href = this.getAttribute('href');
    }
  });
}
      </script>

